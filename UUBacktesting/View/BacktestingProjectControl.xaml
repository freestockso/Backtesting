                                                CategoryBinding="Time"
                                                Stroke="Red"
                                                StrokeThickness="3"
                                                Period="{Binding AverageVolume}" >

                            </telerik:MovingAverageIndicator>
                        </telerik:RadCartesianChart.Indicators>
                        <telerik:RadCartesianChart.Series>
