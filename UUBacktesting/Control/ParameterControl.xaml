<UserControl x:Class="UUBacktesting.Control.ParameterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:UUBacktesting.Control"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500" DataContextChanged="UserControl_DataContextChanged">
    <UserControl.Resources>

    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="132*"/>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="161*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding Name}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"></TextBlock>
        <Border Grid.Column="1" Margin="5" Name="EditControl"></Border>
        <TextBlock Text="{Binding Memo}" Grid.Column="2"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"></TextBlock>
    </Grid>
</UserControl>
